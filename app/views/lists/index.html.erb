
<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <% if list.user== current_user %>
        <tr>
          <td><%= link_to list.first_name + " "+ list.last_name, list %></td>
          <td><%= list.email %></td>
          <td><%= list.phone %></td> 
          <td><%= list.twitter %></td>
          <td><%= list.user_id %></td>
          
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New List', new_list_path ,class:"btn btn-secondary"%>
<% else %>

<div class="jumbotron">
  <h1 class="display-4">Welcome to list app!</h1>
  <p class="lead">You can store,add,edit delete your own list datas </p>
  <hr class="my-4">
  <p>Please Login to see your own list</p>
  
</div>
<% end %>